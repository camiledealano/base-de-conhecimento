<head>
    <title>Usuários</title>
</head>

<%- include('header'); -%>

<main class="mt-4">
    <% if(message) { %>       
        <div class="container alert alert-success d-flex justify-content-between align-items-center" style="width: 400px;">
            <%= message.message %>
            <a href="" class="close" data-dismiss="alert">
                <i class="material-icons" style="color: var(--primary);">close</i>
            </a>
        </div>
     <% }; %>
    <div class="mb-3" style="margin-left: 6%; width: 150px;">
        <a href="/novo-usuario" class="btn btn-success d-flex align-items-center">
            <i class="material-icons mr-2">add</i>    
            Novo usuário
        </a>
    </div>
    <div class="list-data">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Usuário</th>
                    <th scope="col">Nível</th>
                    <th scope="col">Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody> 
                <% users.forEach(function(user) { %>       
                    <tr>
                        <td><%= user.author_id %></td>
                        <td><%= user.author_name %></td>
                        <td><%= user.author_user %></td>
                        <td><%= user.author_level %></td>
                        <td><%= user.author_status %></td>
                        <td class="btn-group">
                            <a href="/users/edit/<%= user.author_id %>">
                                <button class="btn btn-outline-primary btn-sm">
                                    <i class="material-icons">create</i>
                                </button>
                            </a>
                            <div style="margin: 3px;"></div>
                            <a href="/users/delete/<%= user.author_id %>">
                                <button class="btn btn-outline-danger btn-sm">
                                    <i class="material-icons">delete</i>    
                                </button>
                            </a>
                        </td>               
                    </tr> 
                <% }); %>
            </tbody>
        </table>
    </div>
</main>