<% if(message) { %>       
    <div class="alert alert-<%= message.type %> alert-dismissible fade show text-center" role="alert">
      <%= message.message %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
 <% }; %>
 