<%- include('header'); -%>
    <main class="container container-form mt-5">
        <%- include('./partials/_msg'); -%>
        <h2 class="text-center mb-1">Editar Usuário</h2>
        <form action="/users/edit" method="POST" enctype="application/x-www-form-urlencoded">
            <div class="col-md-12 mb-3">
                <input type="hidden" name="author_id" value="<%= user.author_id %>" display>
                <label for="inputnome4">Nome</label>
                <input type="text" class="form-control focus-purple" id="inputnome4" name="author_name" value="<%= user.author_name %>">
            </div>
            <div class="col-md-12 row mb-3">
                <div class="col-md-6">
                    <label for="inputEmail4">E-mail</label>
                    <input type="email" class="form-control focus-purple" id="inputEmail4" name="author_email" value="<%= user.author_email %>">    
                </div>
                <div class="col-md-6">
                    <label for="inputPassword4">Senha</label>
                    <input type="password" class="form-control focus-purple" id="inputPassword4" name="author_pwd" value="<%= user.author_pwd %>" style="width: 105%;">
                </div>
            </div>
            <div class="col-md-12 mb-3 row">
                <div class="col-md-6">
                    <label for="inputEstado">Nível de Acesso</label>
                    <select id="inputEstado" class="form-control focus-purple" name="author_level">
                        <option value="" disabled selected>Escolher...</option>
                        <option <% if (user.author_level === 'admin') { %>selected<% } %>>Administrador</option>
                        <option <% if (user.author_level === 'normal') { %>selected<% } %>>Usuário Comum</option>
                    </select>
                </div>
                <div class="col-md-6" style="margin-top: 28px;">
                    <span class="col-sm-3" style="margin-right: 10px;">Status:</span>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input focus-purple" type="radio" name="author_status" id="gridRadios1" value="Ativo"
                            checked>
                        <label class="form-check-label" for="gridRadios1">
                            Ativo
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input focus-purple" type="radio" name="author_status" id="gridRadios2" value="Desativo">
                        <label class="form-check-label" for="gridRadios2">
                            Desativo
                        </label>
                    </div>
                </div>
            </div>
            <div class="text-center btn-cadastrar-artigo">
                <button type="submit" class="btn btn-success mt-2" style="width: 150px;">Editar</button>
            </div>
        </form>
    </main>